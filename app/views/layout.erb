  </head>
  <body>
    <div class="wrapper">

      <% if flash[:error] %>
      <h3 style="color:red;"><%= flash[:error] %></h3>
      <% end %>

      <% if flash[:message] %>
      <h3 style="color:green;"><%= flash[:message] %></h3>
      <% end %>

      <div class="nav">
        <% if logged_in? %>
          <a href="/wines">Wine Index</a>&nbsp;
          <a href="/users/<%=current_user.id%>">My Wines</a>&nbsp;
          <a href="/wines/new">Add a Wine</a>&nbsp;
          <a href="/wine_types">Explore Wines</a>&nbsp;
          <a href="/logout">Log Out</a>&nbsp;
          <form method="" action="/search">
          <h6>Search for Wine <input type="text" name="name">
          <input type="SUBMIT" value="Search">
          </form></h6> 
          <% end %>
       </div>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>Vinolog</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
