<h1> Add a New Wine </h1>

<form method="POST" action="/wines">
    <h3>Name: <input type="text" name="name"></h3>
    <h3>Year: <input type="text" name="year"></h3>
    <h3>Varietal: <input type="text" name="varietal"></h3>
    <h3><label for="rating">Rating:</label> 
    <select id="rating" name="rating">
    <option value=1>1 - Not Great</option>
    <option value=2>2 - Could Be Better</option>
    <option value=3>3 - Decent</option>
    <option value=4>4 - Solid Choice</option>
    <option value=5>5 - Amazing!</option>
    </select></h3>
    <h3>Choose a Wine Type: </h3>
        <%@wine_types.each do |type|%>
            <input type="radio", name="wine_type_id" value="<%= type.id%>"><%= type.name%>
            <%end%> 
            <br><br>
    <h3>Comment(optional): <input type="text" name="comment"></h3>
    
<p><input type="SUBMIT" value="Add Wine"></p>
</form>
